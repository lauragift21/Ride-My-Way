{
  "name": "ride-my-way",
  "version": "1.0.0",
  "description": "Ride-My-Way is a carpooling application that provides drivers with the ability to create ride offers and passengers to join available ride offers.",
  "main": "app.js",
  "scripts": {
    "build": "rimraf dist && babel server -d dist",
    "start": "yarn run build && node dist/app.js",
    "dev": "nodemon server/app.js --exec babel-node",
    "lint": "./node_modules/.bin/eslint server",
    "test": " nyc mocha --require babel-register server/test/*",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "report-coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "commit": "git cz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lauragift21/Ride-My-Way.git"
  },
  "author": "Egwuenu Gift <laurandidi21@gmail.com> (https://giftegwuenu.com/)",
  "license": "MIT",
  "private": true,
  "bugs": {
    "url": "https://github.com/lauragift21/Ride-My-Way/issues"
  },
  "homepage": "https://github.com/lauragift21/Ride-My-Way#readme",
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "express": "4.16.3",
    "istanbul": "^0.4.5"
  },
  "devDependencies": {
    "@babel/node": "^7.0.0-beta.51",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "1.7.0",
    "chai": "4.1.2",
    "codeclimate-test-reporter": "^0.5.0",
    "codecov": "^3.0.2",
    "commitizen": "^2.10.1",
    "coveralls": "^3.0.1",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "4.19.1",
    "eslint-config-airbnb-base": "12.1.0",
    "eslint-plugin-import": "2.12.0",
    "mocha": "5.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.17.5",
    "nyc": "^12.0.2",
    "rimraf": "2.6.2",
    "supertest": "^3.1.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
